<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="WebViewLayout">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@color/light_backgroundColor"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/headBarColor"
        android:elevation="5dp"
        android:layout_centerVertical="true"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<!--                <TextView-->
<!--                    android:id="@+id/popup_heading"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Special Offer"-->
<!--                    android:textSize="25sp"-->
<!--                    android:textColor="@color/colorPrimaryDark"-->
<!--                    android:background="@color/headBarColor"-->
<!--                    android:layout_marginBottom="2dp"-->
<!--                    tools:ignore="MissingConstraints" />-->
                <WebView
                    android:id="@+id/popupWebView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <ImageView
                android:layout_margin="2dp"
                android:id="@+id/popUpCancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_baseline_cancel"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>